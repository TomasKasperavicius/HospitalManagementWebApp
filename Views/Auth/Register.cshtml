@model Patient
@{
}
<div class="d-flex flex-column justify-content-center align-items-center h-100 w-100">
    <div class="text-center mb-4">
        <img src="~/images/AUTH_MED_LOGO.svg"/>
    </div>
    <form class="col-md-6 col-lg-4 g-3 p-4 border rounded" method="post" asp-action="Login" asp-controller="Auth">
        <div class="mb-3 form-floating">
            <input type="text" class="form-control rounded-pill border-0" placeholder="First Name" id="firstName" asp-for="FirstName" style="background-color: #EEEEEE;">
            <label for="firstName">First Name</label>
        </div>
        <div class="mb-3 form-floating">
            <input type="text" class="form-control rounded-pill border-0" placeholder="Last Name" id="lastName" asp-for="LastName" style="background-color: #EEEEEE;">
            <label for="lastName">Last Name</label>
        </div>
        <div class="mb-3 form-floating">
            <input type="text" class="form-control rounded-pill border-0" placeholder="Email" id="email" asp-for="Email" style="background-color: #EEEEEE;">
            <label for="email">Email</label>
        </div>
        <div class="mb-3 form-floating">
            <input type="tel" class="form-control rounded-pill border-0" placeholder="Phone Number" id="phone" asp-for="Phone" name="phone" style="background-color: #EEEEEE;">
            <label for="phone">Phone Number</label>
        </div>
        <div class="mb-3 form-floating">
            <input type="password" class="form-control rounded-pill  border-0" id="password" asp-for="Password" style="background-color: #EEEEEE;" placeholder="Password">
            <label for="password">Password</label>
        </div>
        @* <div class="mb-3 form-floating">
            <input type="password" class="form-control rounded-pill  border-0" id="password" asp-for="Password" style="background-color: #EEEEEE;" placeholder="Confirm Password">
            <label for="confirmPassword">Confirm Password</label>
        </div> *@
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
</div>